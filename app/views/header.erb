<header class="clearfix">
	<div id="logo"><a class="logo" href="/">SurfPost</a></div><br>
	<div id="user-posts">
		<%if current_user %>
			<span id="welcome-message">
				Welcome, <%= current_user.name %>
			</span>
			<a class="button" href="/users/sign-out">Sign out</a>
			<% unless request.path_info == ('/posts/create' || '/upload') %>
				<a class="button" href="/posts/create">Text post</a>
				<a class="button" href="/upload">Picture post</a>
			<%end%>
		<% else %>
			<% if request.path_info == '/session/new' %>
				<a class="button" href="/users/new">Sign up</a>
			<% elsif request.path_info == '/users/new' %>
				<a class="button" href="/session/new">Sign in</a>
			<% else %>
				<a class="button" href="/users/new">Sign up</a>
				<a class="button" href="/session/new">Sign in</a>
			<% end %>
		<% end %>
		</div>
</header>