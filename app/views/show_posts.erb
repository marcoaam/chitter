<% @posts.each do |post| %>
	<%if post.picture != ""%>
		<div id="post">
			<img class="post" src="/uploads/<%= post.picture %>" alt="some_text"><br>
			<%= post.post %> <br>
		Posted by <a class="post" href="/filter/<%=post.user.username %>">@<%= post.user.username %></a></div>
	<% else %>
	<div id="post"><%= post.post %> <br>
	Posted by <a class="post" href="/filter/<%=post.user.username %>">@<%= post.user.username %></a></div>
	<% end %>
<% end %>